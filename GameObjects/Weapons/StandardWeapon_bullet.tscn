func _physics_process(delta):
	var c = move_and_collide(vec)
	if c:
		if c.collider.is_in_group(\"bullet\"):
			self.add_collision_exception_with(c.collider)
		if c.collider.is_in_group(\"mirror\"):
			vec = vec.bounce(c.normal)
		else:
			queue_free()"

